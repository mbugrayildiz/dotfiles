#! /bin/sh

# kill everything
killall -q sxhkd polybar nm-applet blueman-applet redshift xautolock picom

# programs
setxkbmap gb
setxkbmap -option caps:swapescape
sxhkd &

polybar example &
nm-applet &
blueman-applet &

[ -f ~/.fehbg ] && ~/.fehbg
redshift &
xautolock -locker "i3lock-fancy -f \"Fira Code Retina\" -t \"YILDIZ\" -g" &
picom --experimental-backends &

# workspaces
bspc monitor -d I II III IV V VI VII VIII IX X

# prefs
`sleep 1 && bspc config top_padding 20` &
bspc config border_width            3
bspc config normal_border_color    "#050505"
bspc config active_border_color    "#0f0f0f"
bspc config window_gap              10
bspc config split_ratio             0.5
bspc config borderless_monocle      false
bspc config gapless_monocle         false
bspc config single_monocle          false
bspc config focus_follows_pointer   true

# rules
bspc rule -a Blueman-manager state=floating focus=on
